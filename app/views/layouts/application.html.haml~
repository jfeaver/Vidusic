!!!5
%html
  %head
    %title Vidusic
    =stylesheet_link_tag    "application", :media => "all"
    =javascript_include_tag "application" 
    =csrf_meta_tags
  %body
    -if flash[:notice]
      #notice
        %p= flash[:notice]
    -if flash[:alert]
      #alert
        %p= flash[:alert]
    -if @nav
      %nav
        %ul(id="nav")
          %li(id="previous")
            %a{:href => @nav[:link_to_previous]}
              =@nav[:previous]
          %li(id="current")
            =@nav[:title]
          %li(id="next")
            %a{:href => @nav[:link_to_next]}
              =@nav[:next]
    =yield
