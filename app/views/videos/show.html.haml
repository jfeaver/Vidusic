%div(id="media_wrapper")
  %div(id="media_video")
    %object(style="height: 315px; width: 560px")
      %param(name="movie" value="https://www.youtube.com/v/#{@video.slug}?version=3&feature=player_embedded")
      %param(name="allowFullScreen" value="true")
      %param(name="allowScriptAccess" value="always")
      %param(name="autoplay" value="1")
      %embed(src="https://www.youtube.com/v/#{@video.slug}?version=3&feature=player_embedded" type="application/x-shockwave-flash" allowfullscreen="true" allowScriptAccess="always" width="560" height="315")
