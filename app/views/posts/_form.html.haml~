    -if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this video from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg
    -if @background.errors.any?
      #error_explanation
        %h2= "#{pluralize(@background.errors.count, "error")} prohibited this video from being saved:"
        %ul
          - @background.errors.full_messages.each do |msg|
            %li= msg

